<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="20dp"
            android:text="Enter your OTP"
            android:layout_marginBottom="20dp"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:text="@string/otp_info"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="Enter your OTP code here"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#30000000"
                android:maxLength="1"
                android:maxLines="1"
                android:inputType="number"
                android:textAlignment="center"
                android:focusable="true" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="#30000000"
                android:focusable="true"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#30000000"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:focusable="true" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:background="#30000000"
                android:textAlignment="center"
                android:focusable="true" />

            <EditText
                android:id="@+id/et5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:maxLength="1"
                android:maxLines="1"
                android:background="#30000000"
                android:textAlignment="center"
                android:focusable="true" />

            <EditText
                android:id="@+id/et6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:maxLength="1"
                android:maxLines="1"
                android:layout_marginStart="20dp"
                android:background="#30000000"
                android:inputType="number"
                android:textAlignment="center"
                android:focusable="true" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="I didn't receive a code!"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="Resend Code"
            android:textColor="@color/mainAppColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/otp_login_btn"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_adult"
            android:text="Sign up"
            android:enabled="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>