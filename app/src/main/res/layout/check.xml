<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <CheckBox
            android:id="@+id/groceryCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Grocery"
            app:useMaterialThemeColors="false" />

        <CheckBox
            android:id="@+id/stationaryCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="200dp"
            android:text="Stationary"
            app:useMaterialThemeColors="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/pharmacyCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Pharmacy"
            app:useMaterialThemeColors="false" />

        <CheckBox
            android:id="@+id/hardwareCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="200dp"
            android:text="Hardware"
            app:useMaterialThemeColors="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/fruitsAndVegCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Fruits and Veg"
            app:useMaterialThemeColors="false" />
    </RelativeLayout>


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_not"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"
        app:chipSpacingVertical="4dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grocery"
            app:chipCornerRadius="6dp"
            app:closeIcon="@drawable/ic_baseline_close_24"
            app:rippleColor="@color/colorAccent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stationary"
            app:chipCornerRadius="12dp"
            app:closeIcon="@drawable/ic_baseline_close_24"
            app:rippleColor="@color/colorAccent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pharmacy"
            app:chipCornerRadius="12dp"
            app:closeIcon="@drawable/ic_baseline_close_24"
            app:rippleColor="@color/colorAccent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hardware"
            app:chipCornerRadius="12dp"
            app:closeIcon="@drawable/ic_baseline_close_24"
            app:rippleColor="@color/colorAccent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            style="@style/Widget.MaterialComponents.Chip.Choice"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruits and veg"
            app:chipCornerRadius="12dp"
            app:closeIcon="@drawable/ic_baseline_close_24"
            app:rippleColor="@color/colorAccent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip6"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electronics"
            app:chipCornerRadius="12dp"
            app:closeIcon="@drawable/ic_baseline_close_24"
            app:rippleColor="@color/colorAccent" />
    </com.google.android.material.chip.ChipGroup>


    <com.google.android.material.chip.Chip
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:padding="12dp"
        android:text="Grocery"
        android:textSize="18sp"
        app:chipCornerRadius="6dp"
        app:closeIcon="@drawable/ic_baseline_close_24"
        app:rippleColor="@color/colorAccent"
        app:textStartPadding="20dp" />
</LinearLayout>