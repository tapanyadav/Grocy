<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Location"
            android:textColor="#000000"
            android:textSize="22sp"
            android:fontFamily="@font/kalam_bold"
            android:layout_marginStart="10dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_clear_black_24dp" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextLoc"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/round_corner"
        android:drawableStart="@drawable/icon_search_new"
        android:hint="Search for your location"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/josefin_sans"
        android:textColorHint="#9DC0F9"
        android:focusable="false"
        android:maxLines="1"
        android:textColor="#659BF6"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingStart="20dp"
        android:drawablePadding="12dp"/>



        <TextView
            android:id="@+id/textViewCurrentLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Use your current location"
            android:drawableStart="@drawable/icon_loc_on"
            android:drawablePadding="6dp"
            android:textColor="#659BF6"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:text="Add address"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/icon_plus"
            android:drawablePadding="12dp"
            android:textColor="#659BF6"
            android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#659BF6"
        android:layout_marginTop="14dp"
        android:alpha="0.4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Saved Addresses"
        android:fontFamily="@font/kalam_bold"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="To be added" />


</LinearLayout>