<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/final_back_img" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grocy"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#659BF6"
        android:fontFamily="@font/josefin_sans"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="bottom">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reg_nameText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="4dp"
            android:hint="Name"
            android:fontFamily="@font/josefin_sans"
            android:gravity="center_vertical"
            android:textColorHint="#9DC0F9"
            android:textColor="#659BF6"
            android:inputType="textPersonName"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxLines="1"
            android:drawableStart="@drawable/icon_user_new"
            android:background="@drawable/round_corner"
            android:paddingStart="20dp"
            android:drawablePadding="12dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reg_emailText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="Email"
            android:gravity="center_vertical"
            android:fontFamily="@font/josefin_sans"
            android:textColorHint="#9DC0F9"
            android:textColor="#659BF6"
            android:textStyle="bold"
            android:textSize="22sp"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/icon_email"
            android:background="@drawable/round_corner"
            android:paddingStart="20dp"
            android:drawablePadding="12dp"/>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reg_passText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:fontFamily="@font/josefin_sans"
            android:gravity="center_vertical"
            android:textColorHint="#9DC0F9"
            android:textColor="#659BF6"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:textSize="22sp"
            android:maxLines="1"
            android:drawableStart="@drawable/icon_password"
            android:background="@drawable/round_corner"
            android:paddingStart="20dp"
            android:drawablePadding="12dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reg_ConfPassText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:hint="Confirm Password"
            android:fontFamily="@font/josefin_sans"
            android:gravity="center_vertical"
            android:textColorHint="#9DC0F9"
            android:textColor="#659BF6"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:textSize="22sp"
            android:maxLines="1"
            android:drawableStart="@drawable/icon_password"
            android:background="@drawable/round_corner"
            android:paddingStart="20dp"
            android:drawablePadding="12dp"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:fontFamily="@font/josefin_sans"
            android:textSize="16sp"
            android:textColor="#979797"
            android:text="Accept the Terms and Conditions" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegNext"
            android:background="@drawable/background_adult"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Next"
            android:textStyle="bold"
            android:textColorHint="#707070"
            app:cornerRadius="12dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/josefin_sans"
            android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="40dp"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start|bottom"
                android:src="@drawable/leaves"/>

            <TextView
                android:id="@+id/textViewSignReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:textColor="#659BF6"
                android:fontFamily="@font/josefin_sans"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>