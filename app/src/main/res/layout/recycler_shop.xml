<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="2dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp">
            <ImageView
                android:id="@+id/iv_shop_recycler"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/gupta_shop"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gupta Grocery Store"
                android:textStyle="bold"
                android:textColor="#000"
                android:fontFamily="@font/kalam_bold"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/tv_type_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily needs items"
                android:textSize="16sp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/tv_limit_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 per order | 40 min"
                android:layout_marginTop="3dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_off_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30% OFF - use code WELCOME30"
                android:textSize="14sp"
                android:textColor="@color/mainAppColor"
                android:layout_marginTop="3dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_rating_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:background="@drawable/text_back"
                android:padding="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>