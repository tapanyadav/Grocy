<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/josefin_sans"
            android:text="Gupta Grocery Store"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"
            android:text="Daily needs items"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/search_tv_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="3dp"

            android:text="200 per order | 40 min"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/search_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/kalam_bold"
            android:text="Alpha-1 market"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_shop_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_text_all"
            android:padding="5dp"
            android:text="Grocery"
            android:textColor="#fff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/search_shop_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/back_text_all"
            android:padding="5dp"
            android:text="40% OFF"
            android:textColor="#fff"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>