<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/card_view_featured"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="12dp"
    android:padding="4dp"
    android:layout_marginStart="6dp"
    android:background="#fff"
    android:layout_marginEnd="6dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_featured_recycler_all"
                android:layout_width="match_parent"
                android:background="#659FF6"
                android:layout_height="220dp"
                android:src="@drawable/epic_deals"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shop_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPEN"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/background_signup"
                    android:padding="4dp"
                    android:fontFamily="@font/josefin_sans"
                    android:layout_marginStart="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/shop_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/josefin_sans"
                        android:textColor="@color/colorAccent"
                        android:drawableStart="@drawable/icon_star"
                        android:drawablePadding="3.5dp"
                        android:paddingTop="2dp"
                        android:padding="4dp"
                        android:background="@drawable/background_signup"
                        android:gravity="end|center_vertical"
                        android:layout_marginEnd="12dp"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shop_name_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gupta Grocery Store"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/josefin_sans"
                    android:layout_marginStart="12dp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/shop_address_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alpha-1 market"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/kalam_bold"
                    android:layout_marginStart="12dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="end|center_vertical">
                <TextView
                    android:id="@+id/shop_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_text_all"
                    android:text="Grocery"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/shop_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_text_all"
                    android:text="40% OFF"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>